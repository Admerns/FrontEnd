<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.SignUp">

    <androidx.cardview.widget.CardView
        android:id="@+id/logo1"
        android:layout_width="121dp"
        android:layout_height="121dp"
        android:layout_marginStart="145dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="145dp"
        android:layout_marginBottom="553dp"
        app:cardCornerRadius="121dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="121dp"
            android:layout_height="121dp"
            android:layout_gravity="center"
            app:cardCornerRadius="250dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/logo_third" />

        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/snCardView"
        app:cardElevation="200dp"
        android:backgroundTint="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/relativeLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo1">

        <EditText
            android:id="@+id/nameid"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:background="@drawable/border"
            android:drawableLeft="@drawable/ic_action_name"
            android:ems="10"
            android:fontFamily="@font/indie_flower"
            android:hint=" Username"
            android:inputType="textPersonName"

            android:textColor="@color/teal_200"
            android:textColorHint="@color/hintColor"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/emailid"

            android:layout_width="280dp"
            android:layout_height="48dp"
            android:layout_marginTop="72dp"
            android:background="@drawable/border"
            android:drawableLeft="@drawable/ic_action_mail"
            android:ems="10"
            android:fontFamily="@font/indie_flower"
            android:foregroundGravity="center_horizontal"
            android:hint=" Email"
            android:inputType="textPersonName"
            android:textColor="@color/teal_200"
            android:textColorHint="@color/hintColor"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameid" />

        <EditText
            android:id="@+id/passid"

            android:layout_width="280dp"
            android:layout_height="48dp"
            android:layout_marginTop="144dp"
            android:background="@drawable/border"
            android:drawableLeft="@drawable/ic_action_pass"
            android:ems="10"
            android:fontFamily="@font/indie_flower"
            android:hint=" Password"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColor="@color/teal_200"
            android:textColorHint="@color/hintColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emailid" />

        <EditText
            android:id="@+id/confpassid"

            android:layout_width="280dp"
            android:layout_height="48dp"
            android:layout_marginTop="216dp"
            android:background="@drawable/border"
            android:drawableLeft="@drawable/ic_action_pass"
            android:ems="10"
            android:fontFamily="@font/indie_flower"
            android:hint=" Confirm password"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColor="@color/teal_200"
            android:textColorHint="@color/hintColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passid" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewsignup"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginTop="52dp"
        android:padding="10dp"
        app:cardBackgroundColor="#07F4DE"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/snCardView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/indie_flower"
                android:padding="5dp"
                android:text="Sign Up"
                android:textSize="25dp"
                android:textStyle="bold" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView

        android:id="@+id/loginclick"
        android:layout_width="264dp"
        android:layout_height="36dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/indie_flower"
        android:gravity="center_horizontal"
        android:text="Do you have an account?"
        android:textColor="@color/light_blue_background"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewsignup" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.scwang.wave.MultiWaveHeader
            android:id="@+id/waveHeader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="200dp"
            android:scaleY="-1"
            app:mwhCloseColor="@color/start_blue"
            app:mwhColorAlpha="0.45"
            app:mwhGradientAngle="45"
            app:mwhProgress="1"
            app:mwhStartColor="#CC6FDC"
            app:mwhVelocity="1"
            app:mwhWaveHeight="50dp"
            app:mwhWaves="MultiWave" />


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>