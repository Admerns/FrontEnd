<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:padding="20dp"
    android:elevation="10dp">

    <ImageView
        android:id="@+id/logo_alert_s"
        android:layout_width="235dp"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:src="@mipmap/successfull"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleTv_s"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_alert_s" />
    <TextView
        android:id="@+id/messageTv_s"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:text="TextView"
        android:gravity="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTv_s" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrant3"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:foregroundGravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/messageTv_s">

        <TextView
            android:id="@+id/tokenTv_s"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="TextView"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/copy_s"
            app:layout_constraintHorizontal_bias="0.058"
            app:layout_constraintRight_toLeftOf="@+id/copy_s"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/copy_s"
            android:layout_width="43dp"
            android:layout_height="46dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/ic_baseline_content_copy_24"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:id="@+id/okBtn_s"
        android:layout_width="190dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/SuccessfullGreen"
        android:text="ok"
        android:layout_marginBottom="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constrant3" />



</androidx.constraintlayout.widget.ConstraintLayout>